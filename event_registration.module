<?php

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {
  switch ($key) {

    case 'registration_confirmation':
      $message['subject'] = t('Event Registration Confirmation');
      $message['body'][] = t(
        "Hello @name,\n\nYou have successfully registered for the event.\n\nEvent: @event_name\nCategory: @category\nDate: @event_date",
        [
          '@name' => $params['full_name'] ?? 'Participant',
          '@event_name' => $params['event_name'] ?? 'Unknown',
          '@category' => $params['category'] ?? 'Unknown',
          '@event_date' => $params['event_date'] ?? 'Unknown',
        ]
      );
      break;

    case 'admin_notification':
      $message['subject'] = t('New Event Registration');
      $message['body'][] = t(
        "A new user has registered for an event.\n\nName: @name\nEmail: @email\nEvent: @event_name\nCategory: @category\nDate: @event_date",
        [
          '@name' => $params['full_name'] ?? 'Participant',
          '@email' => $params['email'] ?? 'Unknown',
          '@event_name' => $params['event_name'] ?? 'Unknown',
          '@category' => $params['category'] ?? 'Unknown',
          '@event_date' => $params['event_date'] ?? 'Unknown',
        ]
      );
      break;
  }
}
